<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Showuser">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextsharp"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/utsavlogo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_height="3dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:id="@+id/accountinformation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittextround"
                    android:text="Account Information" />

                <ProgressBar
                    android:id="@+id/showuserprogress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1" />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/candidateimage"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp" />

                    <TextView
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Name" />


                    <TextView
                        android:id="@+id/dateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Date Of Birth" />



                <TextView
                        android:id="@+id/occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Occupation" />





                    <TextView
                        android:id="@+id/aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="About Me/Hobbies" />




                <TextView
                    android:id="@+id/personalinformation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittextround"
                    android:text="Personal Information" />




                    <TextView
                        android:id="@+id/maritalstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Marital Status" />


                    <TextView
                        android:id="@+id/firstgotra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="First Gotra" />





                    <TextView
                        android:id="@+id/emailid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Email Id" />

                    <TextView
                        android:id="@+id/resiadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Resi.Add" />


                    <TextView
                        android:id="@+id/permadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Perm.Add" />

                    <TextView
                        android:id="@+id/contact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Contact No:" />




                    <TextView
                        android:id="@+id/height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Height" />


                    <TextView
                        android:id="@+id/bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Blood Group" />



                    <TextView
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Education" />


                    <TextView
                        android:id="@+id/annualincome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Annual Income" />





                <TextView
                    android:id="@+id/familydetails"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittextround"
                    android:text="Family Details" />




                    <TextView
                        android:id="@+id/fathername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Father Name" />

                    <TextView
                        android:id="@+id/occupation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Occupation" />


                    <TextView
                        android:id="@+id/mothername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Mother's Name" />

                    <TextView
                        android:id="@+id/occupation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Occupation" />

                    <TextView
                        android:id="@+id/noofbrothers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="No. Of Brothers" />


                    <TextView
                        android:id="@+id/brothersdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Brother Details" />
               >

                    <TextView
                        android:id="@+id/noofsisters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="No. Of Sisters" />



                    <TextView
                        android:id="@+id/sistersdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Sister Details" />

                <TextView
                    android:id="@+id/partnersexpectation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittextround"
                    android:text="Partner's Expectation" />



                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Qualification" />

                    <TextView
                        android:id="@+id/annualincome1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Annual Income" />

                    <TextView
                        android:id="@+id/agerange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Age Range" />

                    <TextView
                        android:id="@+id/height1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Height" />


                    <TextView
                        android:id="@+id/occupation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Occupation" />

                    <TextView
                        android:id="@+id/preferredcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittextsharp"
                        android:textSize="18sp"
                        android:hint="Preferred City" />


                <Button
                    android:id="@+id/retuenbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="Return To Homepage" />




            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>