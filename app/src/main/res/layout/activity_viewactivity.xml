<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Viewactivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical" >
                <ProgressBar
                    android:id="@+id/waitingprogress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextsharp"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:id="@+id/mainlayout"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:src="@drawable/utsavlogo" />



                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/accountinformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Account Information" />





                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/gendertxt"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        />



                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/firstname"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="First Name *" />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/middlename"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Middle Name *" />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/lastname"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Last Name * " />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/avantak"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Avantak * (For Ex. Todrawat)" />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/chauphalatext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:textSize="18sp"
                        android:inputType="text"
                        android:hint="bloodgroup" />




                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:textSize="18sp"
                        android:inputType="text"
                        android:hint="bloodgroup" />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"

                        android:textSize="18sp"
                        android:inputType="text"
                        android:hint="Business" />

                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:textSize="18sp"
                        android:inputType="text"
                        android:hint="Profession" />



                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/resiadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="textMultiLine"
                        android:hint="Residential Address *" />

                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/permadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="textMultiLine"
                        android:hint="Native Address (Rajsthan) *" />


                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/contact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="number"
                        android:hint="Contact Number *" />

                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/agetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="text"
                        />

                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/statustext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="text"
                        />

                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/childstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="text"
                        />




                    <TextView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextround"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/qualification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="text"
                        android:hint="Qualification" />



                    <ProgressBar
                        android:id="@+id/mainprogressbar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_weight="1" />



                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
